<%- include('../../components/header.ejs') %>
    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Formulario de Hamburguesas</h5>
                        <form method="post" action="">
                            <% if (errors) { %>
                                <div class="alert alert-warning">
                                    <%= errors.message%>
                                </div>
                                <% } %>
                                    <div class="mt-2">
                                        <label>Nombre</label>
                                        <input required class="form-control" type="text" name="hnombre"
                                            placeholder="Nombre" value="<%=hamburguesa && hamburguesa.hnombre %>">
                                        <%if (errors?.hnombre) {%>
                                            <div class="error-label">
                                                Por favor ingrese un nombre
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="mt-2">
                                        <label>Descripcion</label>
                                        <input required class="form-control" type="text" name="descripcion"
                                            placeholder="Descripcion" value="<%=hamburguesa && hamburguesa.descripcion %>">
                                        <%if (errors?.descripcion) {%>
                                            <div class="error-label">
                                                Por favor ingrese una descripcion
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="mt-2">
                                        <label>Restaurantes</label>
                                        <select required name="restauranteId" class="form-select">
                                            <option value="">Seleccione un Restaurante</option>
                                            <% restaurantes.forEach(restaurante=> { %>
                                                <option value="<%=restaurante.id %>" <%=(hamburguesa &&
                                                    hamburguesa.restauranteId==restaurante.id) && "selected" %>>
                                                    <%=restaurante.rnombre %>
                                                </option>
                                                <% }) %>

                                        </select>
                                        <%if (errors?.restauranteId) {%>
                                            <div class="error-label">
                                                Por favor seleccione un restaurante
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="mt-2">
                                        <input class="btn btn-primary" type="submit" value="Enviar">
                                    </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../components/footer.ejs') %>